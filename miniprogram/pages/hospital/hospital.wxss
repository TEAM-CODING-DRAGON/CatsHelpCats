/* pages/hospital/hospital.wxss */
.container {
  padding: 10px;
}

.hospital-item {
  display: flex;
  border-bottom: 1px solid #eee;
  padding: 10px 0;
}

.hospital-image {
  width: 80px;
  height: 80px;
  border-radius: 10px;
  margin-right: 10px;
}

.hospital-info {
  display: flex;
  flex-direction: column;
  justify-content: flex-start; 
}

.hospital-name {
  font-size: 18px;
  font-weight: bold;
}

.hospital-location {
  font-size: 14px;
  color: #666;
}


.home_navi_view {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100px;
  display: flex;
  justify-content: space-around;
  background-color: rgba(255, 255, 255, 0); /* 根据需要设置背景色 */
  box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1); /* 添加阴影效果，可选 */
}

.bottom_navi_btn {
  width: 10%;
  margin-top: 5%;
  margin-left: 10%;
  margin-right: 10%;
}