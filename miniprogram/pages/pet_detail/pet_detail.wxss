/* pages/hospital/hospital.wxss */
.pet_detail_view {
    margin-top: 50px;
    text-align: center;
}

.pet_detail {
    width: 200px;
    border: 1px solid gray;
    border-radius: 20px;
}

.pet_info {
    margin-top: 10px;
    color: gray;
}

.user_contact_btn {
    background-color: rgb(139, 167, 252);
    border-radius: 20px;
}

.page_placeholder {
    height: 20px;
}

.home_navi_view {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100px;
    display: flex;
    justify-content: space-around;
    background-color: rgba(255, 255, 255, 0); /* 根据需要设置背景色 */
    box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1); /* 添加阴影效果，可选 */
  }

.bottom_navi_btn {
    width: 10%;
    margin-top: 5%;
    margin-left: 10%;
    margin-right: 10%;
}