/* pages/self/self.wxss */
.container {
  position: relative;
  height: 100vh;
  background-color: #f0f0f0;
  padding: 20px;
}

.header {
  display: flex;
  align-items: center;
}

.avatar-button {
  border: none;
  background: none;
  padding: 0;
}

.avatar {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  margin-right: 10px;
}

.login-info {
  font-size: 18px;
  color: #333;
}

.home_navi_view {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 100px;
  display: flex;
  justify-content: space-around;
  background-color: rgba(255, 255, 255, 0); /* 根据需要设置背景色 */
  box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1); /* 添加阴影效果，可选 */
}

.bottom_navi_btn {
  width: 10%;
  margin-top: 5%;
  margin-left: 10%;
  margin-right: 10%;
}