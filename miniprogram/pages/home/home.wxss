/* pages/home/home.wxss */
Page {
    text-align: center;
}

.home_view {
    padding: 20px;
    border-radius: 10px;
}

.title {
    color: gray;
    font-size: 30px;
}

.introduce {
    color:rgb(97, 97, 97);
    padding: 20px;
}

.home_content {
    display: flex;
    align-content: center;
}

.function_view {
    width: 100%;
}

.function_btn {
    width: 80%;
    margin-top: 50px;
    box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1); /* 添加阴影效果，可选 */
}

.home_navi_view {
    position: fixed;
    bottom: 0;
    width: 100%;
    height: 100px;
    display: flex;
    justify-content: space-around;
    background-color: rgba(255, 255, 255, 0); /* 根据需要设置背景色 */
    box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1); /* 添加阴影效果，可选 */
  }

.bottom_navi_btn {
    width: 10%;
    margin-top: 5%;
    margin-left: 10%;
    margin-right: 10%;
}